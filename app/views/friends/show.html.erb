<section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">
          <%= @friend.first_name %>
          <%= @friend.last_name %>
        </h1>
        <p class="lead text-muted">
          <%= @friend.email %>  |  <%= @friend.phone %>  |  <%= @friend.twitter %>
        </p>
        <br />
        <p>
          <%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-secondary" %>
          <%= link_to @friend, method: :delete, 
            data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
            <i class="bi bi-trash"> Delete</i>
          <% end %>
          <%= link_to 'Back', friends_path, class: "btn btn-secondary" %>
        </p>
      </div>
    </div>
  </section>